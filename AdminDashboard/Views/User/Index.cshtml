@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
<hr />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.Name)</th>
                <th>@Html.DisplayNameFor(u => u.isConfirmed)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.isConfirmed</td>
                    <td>@user.Email</td>
                    <td>@string.Join(",", user.Roles.ToList())</td>



                    <td>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There Is No Records ):</h2>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

